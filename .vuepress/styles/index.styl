.custom-block.tip
    border-color $accentColor
    
blockquote 
    color $grey
    border-color $grey
    
.home.hero.description
    color #ffffff

h2
    border none

img .gal-img
    text-align:center
    height:180px
    float: left
    margin: 15px
    box-shadow: 10px 10px 5px #ccc
      -moz-box-shadow: 10px 10px 5px #ccc
      -webkit-box-shadow: 10px 10px 5px #ccc
      -khtml-box-shadow: 10px 10px 5px #ccc

.theme-container.gallery .gal-feature 
    display: grid 
    grid-template-rows: 1fr auto
    grid-template-columns: 1fr 1fr 1fr
    margin: 20px
    padding: 16px
    grid-gap: 5px
    background: #f3f5f7
    border-left: #247ba0 5px solid 
    
//title
.gal-feature div:nth-of-type(1)
    grid-row: 1 / 2
    grid-column: 1 / 4
    font-weight: 600
    text-transform: uppercase
    margin-bottom: -.4rem
    

//game
.gal-feature div:nth-of-type(2)
    grid-row: 2 / 3
    grid-column: 1 / 3

//prev
.gal-feature div:nth-of-type(3)
    grid-row: 3 / 4
    grid-column: 2 / 3

// Source
.gal-feature div:nth-of-type(4)
    grid-row: 2 / 3
    grid-column: 3 / 4
    font-size: small
    text-align: right 









   
