.custom-block.tip
    border-color $accentColor
    
blockquote 
    color $grey
    border-color $grey
    
.home.hero.description
    color #ffffff

h2
    border none


.theme-container.gallery .gal-feature 
    display: grid 
    grid-template-rows: 1fr auto
    grid-template-columns: 1fr 1fr 1fr

.gal-feature div:nth-of-type(1)
    grid-row: 1 / 2
    grid-column: 1 / 4
    font-weight: bold

.gal-feature div:nth-of-type(2)
    grid-row: 2 / 3
    grid-column: 1 / 4

.gal-feature div:nth-of-type(2):before
   content: 'Game: '
   font-style: italic

.gal-feature div:nth-of-type(3)
    grid-row: 3 / 4
    grid-column: 2 / 3

.gal-feature div:nth-of-type(4)
    grid-row: 4 / 5
    grid-column: 1 / 4
    font-size: small









   
